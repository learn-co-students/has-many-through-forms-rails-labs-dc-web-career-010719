<%=form_for @post do |f|%>
<%=f.label "Title: "%>
<%=f.text_field :title%><br><br>
<%=f.label "Content: "%>
<%=f.text_field :content%><br><br>
<%=f.label "Categories: "%>
<%=f.collection_check_boxes :category_ids, Category.all, :id, :name%><br><br>
<%=f.label "Create and add a new category to this post:"%><br><br>
<%=f.fields_for :categories, @post.categories.build do |category|%>
  <%=category.label "Category Name: "%>
  <%=category.text_field :name%><br><br>
<%end%>
<%=f.submit "Create Post"%>
<%end%>
